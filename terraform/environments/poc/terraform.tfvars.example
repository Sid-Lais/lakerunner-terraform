# =============================================================================
# LAKERUNNER POC ENVIRONMENT - QUICK SETUP
# =============================================================================
# This creates a minimal GCP environment for evaluating Lakerunner
# Perfect for demos, trials, and proof-of-concept deployments

# REQUIRED: Your GCP Project ID
project_id = "your-gcp-project-id-here"

# REQUIRED: GCP Region (choose closest to you)
# Common options: us-central1, us-east1, europe-west1, asia-southeast1
region = "us-central1"

# Optional: Specific zone (defaults to {region}-a)
zone = "us-central1-a"

# Environment identifier
environment = "poc"

# Resource labels (optional - apply to all taggable resources)
labels = {
  # team        = "your-team-name"
  # environment = "poc"
  # cost_center = "engineering"
}

# Network Configuration
# Uses existing VPC and subnet (typically the default VPC)
vpc_name   = "default"      # GCP default VPC (exists in every project)
subnet_name = "default"     # Default subnet in your region

# For enterprise customers with custom networks:
# vpc_name   = "your-existing-vpc-name"
# subnet_name = "your-existing-subnet-name"

# Kubernetes Options
# Enable GKE cluster for container workloads (optional)
enable_gke = false  # Set to true if you want a Kubernetes cluster

# GKE Configuration (only used when enable_gke = true)
gke_min_nodes    = 1
gke_max_nodes    = 10
gke_machine_type = "e2-standard-4"
gke_use_spot     = true
gke_disk_size_gb = 50

# PostgreSQL Configuration
# Option 1: Create new PostgreSQL instance (default, easiest for POC)
create_postgresql = true

# Option 2: Use existing PostgreSQL instance (for customers with database restrictions)
# create_postgresql        = false
# postgresql_instance_name = "your-existing-postgresql-instance"
# postgresql_host         = "your-postgresql-host"
# postgresql_port         = 5432
# postgresql_database_name = "lakerunner"
# postgresql_user         = "lakerunner"
# postgresql_password     = "your-existing-password"

# PostgreSQL Instance Settings (only used when create_postgresql = true)
postgresql_machine_type = "db-f1-micro"
postgresql_disk_size_gb = 10
postgresql_version      = "POSTGRES_17"

# PostgreSQL Credentials (only used when create_postgresql = true)
# Leave postgresql_password empty for auto-generation
# postgresql_password = ""